<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThereProfileActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/coverIvID"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="180dp">

            </ImageView>
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="100dp"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/avaterIvID"
                    android:src="@drawable/ic_default_face"
                    android:layout_marginStart="20dp"
                    android:background="#9C27B0"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding="5dp"
                    android:layout_marginLeft="20dp" />
                <LinearLayout
                    android:background="#770000"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/nameTvID"
                        android:textColor="#FFF"
                        android:textSize="22dp"
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp" />
                    <TextView
                        android:id="@+id/emailTvID"
                        android:textColor="#FFF"
                        android:textSize="18dp"
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp" />
                    <TextView
                        android:id="@+id/phoneTvID"
                        android:textColor="#FFF"
                        android:textSize="18dp"
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp" />

                </LinearLayout>


            </LinearLayout>

            <!--RecyclerView : User specific post -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_postID"
                android:layout_below="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

    </ScrollView>
