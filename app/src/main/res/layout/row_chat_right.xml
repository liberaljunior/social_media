<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/messageLayoutID"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/profileIv_chat"
            app:c_border_color="@null"
            android:layout_width="50dp"
            android:visibility="gone"
            android:src="@drawable/ic_default_img"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/timeTvID"
            android:text="02/08/2020 05:59PM"
            android:textColor="#000"
            android:textSize="12sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/messageTvID_chat"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#000"
            android:background="@drawable/bg_sender"
            android:padding="15dp"
            android:text="My Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <TextView
        android:id="@+id/isSeentTvID"
        android:gravity="end"
        android:textAlignment="textEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delivered"
        />


</LinearLayout>